<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Document</title>
</head>

<body>

    <div class="text-center">
        <h1 class="text-danger text-uppercase">
            All Student Data
        </h1>

        <table class="table ">
            <thead>
              <tr>
                <th scope="col" class="border border-end border-dark bg-secondary-subtle">#</th>
                <th scope="col" class="border border-end border-dark bg-secondary-subtle">First Name</th>
                <th scope="col" class="border border-end border-dark bg-secondary-subtle">Last Name</th>
                <th scope="col" class="border border-end border-dark bg-secondary-subtle">Age</th>
                <th scope="col" class="border border-end border-dark bg-secondary-subtle">Contect</th>
                <th scope="col" class="border border-end border-dark bg-secondary-subtle">Button</th>
              </tr>
            </thead>
            <tbody>

                <% students.forEach(function(student){ %>
                    
                    <tr>
                        <th class="border border-end border-dark" scope="row"><%= student.id %></th>
                        <td class="border border-end border-dark"><%= student.first_name %></td>
                        <td class="border border-end border-dark"><%= student.last_name %></td>
                        <td class="border border-end border-dark"><%= student.age %></td>
                        <td class="border border-end border-dark"><%= student.contact %></td>
                        <td class="border border-end border-dark"><button type="submit" class="btn btn-primary">
                            <a href="/edit/<%= student.id %>" class="text-light">Edit</a>
                        </button>
                        ||
                        <button type="submit" class="btn btn-danger">
                            <a href="/delete/<%= student.id %>" class="text-light">Delete</a>
                        </button>
                    </td>
                      </tr>
                  <% }); %>
             
            </tbody>
          </table>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>